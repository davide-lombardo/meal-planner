{
  "name": "meal-planner-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node --experimental-specifier-resolution=node ../../dist/apps/server/index.js",
    "dev": "tsx --experimental-specifier-resolution=node index.ts",
    "dev:watch": "nodemon --exec tsx --experimental-specifier-resolution=node index.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.9.11",
    "shared": "workspace:*",
    "sql.js": "^1.13.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.1",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/nodemailer": "^6.4.15",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.29.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  }
}
